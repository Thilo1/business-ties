<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CodeFont" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#C0C0C0</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textIsSelectable">false</item>
    </style>
    
    <style name="TextViewStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#C0C0C0</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textIsSelectable">false</item>
    </style>
    
    
    <style name="ButtonFont" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#B0E0E6</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="ButtonFont2" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#B0E0E6</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">0dp</item>
     
    </style>
    
    <style name="LayoutStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#FFE4B5</item>
    </style>
    
    <style name="ListViewStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">0dp</item>
         <item name="android:layout_weight">1</item>
        <item name="android:textColor">#FF0000</item>
        
